<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>

	<portlet>
		<portlet-name>library</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>ru.tiis.library.portlet.LibraryConfiguration</configuration-action-class>
		<instanceable>true</instanceable>
		<header-portlet-css>
			/css/library/library.css
		</header-portlet-css>
		<header-portlet-css>
			/lib/css/animate.css
		</header-portlet-css>
		<footer-portlet-javascript>
			/js/library/library.js
		</footer-portlet-javascript>
		<footer-portlet-javascript>
			/lib/js/lazysizes.min.js
		</footer-portlet-javascript>
		<footer-portlet-javascript>
			/lib/jquery/jquery.min.js
		</footer-portlet-javascript>
		<footer-portlet-javascript>
			/js/library/catalog.js
		</footer-portlet-javascript>
		<css-class-wrapper>library-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>book-info</portlet-name>
		<icon>/icon.png</icon>
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>book</friendly-url-mapping>
		<friendly-url-routes>ru/tiis/library/portlet/book-info-friendly-url-routes.xml</friendly-url-routes>
		<header-portlet-css>/css/library/book-info.css</header-portlet-css>
		<header-portlet-css>
			/lib/css/animate.css
		</header-portlet-css>
		<header-portlet-css>
			/lib/jquery/jquery-ui.min.css
		</header-portlet-css>
		<header-portlet-css>
			/lib/sweetalert2/sweetalert2.css
		</header-portlet-css>
		<footer-portlet-javascript>
			/lib/jquery/jquery.min.js
		</footer-portlet-javascript>
		<footer-portlet-javascript>
			/lib/jquery/jquery-ui.min.js
		</footer-portlet-javascript>
		<footer-portlet-javascript>
			/js/library/book-info.js
		</footer-portlet-javascript>
		<footer-portlet-javascript>
			/lib/sweetalert2/sweetalert2.js
		</footer-portlet-javascript>

		<css-class-wrapper>book-info-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>library-managment</portlet-name>
		<icon>/icon.png</icon>
		<indexer-class>ru.tiis.srv.service.indexer.BookIndexer</indexer-class>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>library-managment-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>promo-code-generation</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>promo-code-generation</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>